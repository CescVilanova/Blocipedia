
<h1>Wikis</h1>

<div>
   <%= link_to "New Wiki", new_wiki_path %>
</div>

<hr>

<%@wikis.each do |n|%>
  <h3><%= markdown n.name%></h3>
  <h5><%= markdown n.body%></h5>

  <p><% if n.private == true %>
    This is a private wiki.
    <% else %>      
      This is a public wiki.
    <% end %> 
  </p>

  <div class="one column">
    <%= link_to "Edit", edit_wiki_path(n) %>
  </div>
  
  <div class="two columns">
   <%= link_to "Delete", n, method: :delete, confirm: 'Are you sure you want to delete this wiki?' %>
  </div>

  <div class="one column">
   <%= link_to "Collaborators", wiki_collaborators_path(n) %>
  </div>

  <hr>
  
<%end%>





